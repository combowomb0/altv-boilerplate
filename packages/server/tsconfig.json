{
  "compilerOptions": {
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    "lib": ["es5", "es6", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "typings"
  ]
}